doctype html 
html(lang="en")
  head 
    title contact 
    include ../includes/head-content.pug
    link(rel="stylesheet", href="../scss/contact.css")
  body
    header 
      .container 
        include ../includes/navbar-content.pug
        h1(class="text") Contact Page
        div(class="links") 
          a(href="../index.html") Home 
          span
            i(class="ri-arrow-right-line") 
          a(href="contact.html") contact
    //end of header
    .content
      .container
        .map
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d167998.10803373056!2d2.4871427356319322!3d48.85877410312378!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e1f06e2b70f%3A0x40b82c3688c9460!2z2KjYp9ix2YrYs9iMINmB2LHZhtiz2Kc!5e0!3m2!1sar!2seg!4v1626856618237!5m2!1sar!2seg" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        .row
          div(class="col-md-12 col-lg-4")
            .info
              .box
                span
                  i(class="ri-home-8-fill")
                .text
                  h5 California, United States
                  p Santa monica bullevard
            .info
              .box
                span
                  i(class="ri-phone-fill")
                .text
                  h5 00 (440) 9865 562
                  p Mon to Fri 9am to 6 pm
            .info
              .box
                span
                  i(class="ri-mail-send-line")
                .text
                  h5 support@colorlib.com
                  p Send us your query anytime!
          div(class="col-md-12 col-lg-8")
            form
              input(type="text",placeholder="Enter your name")
              input(type="email",placeholder="Enter email address")
              input(type="text",placeholder="Enter Subject")
              textarea(placeholder="Message")
              button(type="submit",class="diff-btn") SEND MESSAGE
    include ../includes/footer-content.pug